generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BookStatus {
  avariado
  disponivel
  indisponivel
  emprestado
}

model Report {
  id      String  @id @default(uuid())
  book_id String
  Book    Book?   @relation(fields: [bookId], references: [id])
  bookId  String?
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  ra         String
  isAdmin    Boolean  @default(false)
  created_at DateTime @default(now())
  enabled    Boolean  @default(true)
}

model Book {
  id       String     @id @default(uuid())
  code     Int
  name     String
  author   String
  qtd      Int
  position String
  status   BookStatus
  Report   Report[]
}
