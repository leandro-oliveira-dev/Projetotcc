generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BookStatus {
  avariado
  disponivel
  indisponivel
  emprestado
}

model Report {
  id      String  @id @default(uuid())
  book_id String
  Book    Book?   @relation(fields: [bookId], references: [id])
  bookId  String?

  created_at DateTime @default(now())
}

model User {
  id         String   @id @default(uuid())
  name       String
  isAdmin    Boolean  @default(false)
  enabled    Boolean  @default(true)
  created_at DateTime @default(now())

  auth Auth?
}

model Auth {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String
  ra         String
  user       User     @relation(fields: [userId], references: [id])
  userId     String   @unique
  created_at DateTime @default(now())
}

model Book {
  id         String     @id @default(uuid())
  code       Int
  name       String
  author     String
  qtd        Int
  position   String
  status     BookStatus
  Report     Report[]
  created_at DateTime   @default(now())
}
